<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaExercisesSolution.MainWindow"
        Title="AvaloniaExercisesSolution">
    
    <StackPanel>
        <Grid ColumnDefinitions="70* 30*" RowDefinitions="Auto">
            <StackPanel  Grid.Column="0" HorizontalAlignment="Stretch" Background="Blue" VerticalAlignment="Stretch">
                <TextBlock Text="Welcome to Avalonia!" FontSize="18" HorizontalAlignment="Center" Margin="0,10"/>
                <Button Content="Get Started" HorizontalAlignment="Center" Margin="0,10"/>
                <Button Content="Learn More" HorizontalAlignment="Center" Margin="0,10"/>
            </StackPanel>
            <StackPanel  Grid.Column="1" HorizontalAlignment="Stretch" Background="Brown" VerticalAlignment="Stretch">
                <TextBlock Text="Hello, Avalonia!" FontSize="24" HorizontalAlignment="Center" Margin="0,20"/>
                <Button Content="Click Me" HorizontalAlignment="Center" Margin="0,10"/> 
            </StackPanel>
        </Grid>
    </StackPanel>     
</Window>