<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaExercisesSolution.MainWindow"
        Title="AvaloniaExercisesSolution">
    <StackPanel>
        <StackPanel HorizontalAlignment="Left" Background="Blue">
            <TextBlock Text="Welcome to Avalonia!" FontSize="18" HorizontalAlignment="Left" Margin="0,10"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Background="Brown">
            <TextBlock Text="Hello, Avalonia!" FontSize="24" HorizontalAlignment="Center" Margin="0,20"/>
            <Button Content="Click Me" HorizontalAlignment="Center" Margin="0,10"/> 
        </StackPanel>
    </StackPanel>     
</Window>